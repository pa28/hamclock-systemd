#!/bin/bash

USAGE="[-c <codename>] -s <suite> [-n] | [-r]"
CODENAME=""
SEP=""
SUITE=""
REBUILD=1

while getopts c:s:nr? flag
do
    case "${flag}" in
        s) SUITE=${OPTARG};;
        c) CODENAME=${OPTARG}; SEP="/";;
	n) REBUILD=0;;
	r) ssh repo.vfrott.ca bin/rebuild-repo; exit 0;;
	?) echo "Usage: " $(basename $0) ${USAGE}
    esac
done

if [ -z "${SUITE}" ]
then
    echo "Usage: " $(basename $0) ${USAGE} 
    exit 1
fi

shift $(expr $OPTIND - 1 )

echo "Transfering to ${CODENAME}${SEP}${SUITE} repository."

repopath="/var/www/repo/pool/${CODENAME}${SEP}${SUITE}"

for file in "$@"
do
    base=$(basename ${file})
    scp ${file} ubuntu.vfrott.ca:${repopath}/${base}
done
    if [ "${REBUILD}" -eq "1" ]
    then
        ssh ubuntu.vfrott.ca bin/rebuild-repo
    fi
exit 0
